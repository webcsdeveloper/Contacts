@model Contacts.Models.DB.Contact

@{
    ViewData["Title"] = "حذف کردن";
}

<h1>@ViewData["Title"]</h1>

<h3>آیا از حذف اطلاعات تماس زیر اطمینان دارید؟</h3>
<div>
    <h4>اطلاعات تماس</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Firstname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InternalPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InternalPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Post)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Post)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PersonnelId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonnelId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkPlace)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkPlace)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContactId" />
        <input type="submit" value="حذف کردن" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت به لیست تماسها</a>
    </form>
</div>
